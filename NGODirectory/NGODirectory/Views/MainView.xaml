<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGODirectory.Views.MainView"
             xmlns:pages="clr-namespace:NGODirectory.Views;assembly=NGODirectory"
             Title="{Binding Title}">

    <TabbedPage.ToolbarItems>
        <ToolbarItem Name="Logout"
                     Command="{Binding LogoutCommand}"
                     Icon="logout.png"
                     Order="Primary"
                     Priority="0" />
    </TabbedPage.ToolbarItems>
    <TabbedPage.Children>
        <pages:AnnouncementsListView Title="Announcements"/>
        <pages:OrganizationsListView Title="Organizations"/>
    </TabbedPage.Children>
</TabbedPage>