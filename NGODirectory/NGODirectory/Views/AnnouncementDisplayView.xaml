<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGODirectory.Views.AnnouncementDisplayView"
             xmlns:control="clr-namespace:NGODirectory.Controls;assembly=NGODirectory"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>

        <control:ConditionalToolbarItem
            Text="Edit" 
            Command="{Binding EditCommand}"
            IsVisible="{Binding IsUserLoggedIn}">
            <control:ConditionalToolbarItem.Icon>
                <OnPlatform 
                    x:TypeArguments="FileImageSource"
                    Android="edit_icon"
                    iOS="edit_icon"    
                    WinPhone="Assets/edit_icon.png"/>
            </control:ConditionalToolbarItem.Icon>
        </control:ConditionalToolbarItem>

    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Label Text="Name"/>
            <Label Text="{Binding Item.Title}"/>
            <Label Text="Description"/>
            <Label Text="{Binding Item.Description}"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>