<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGODirectory.Views.AnnouncementDisplayView"
             xmlns:control="clr-namespace:NGODirectory.Controls;assembly=NGODirectory"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="ItemImageStyle" TargetType="Image">
                <Setter Property="Aspect">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Aspect">
                            <OnPlatform.iOS>AspectFill</OnPlatform.iOS>
                            <OnPlatform.Android>AspectFill</OnPlatform.Android>
                            <OnPlatform.WinPhone>AspectFit</OnPlatform.WinPhone>
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
                <Setter Property="HeightRequest" Value="250" />
            </Style>

            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
                <Setter Property="Margin" Value="12" />
            </Style>
            


            <Style x:Key="DescriptionStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Small" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                <Setter Property="Margin" Value="12" />
            </Style>

            <Style x:Key="CreatedStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Micro" />
                <Setter Property="TextColor" Value="{StaticResource GrayColor}" />
                <Setter Property="Margin" Value="12" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>

        <control:ConditionalToolbarItem
            Text="Editar noticia" 
            Command="{Binding EditCommand}"
            IsVisible="{Binding IsAuthor}">
            <control:ConditionalToolbarItem.Icon>
                <OnPlatform 
                    x:TypeArguments="FileImageSource"
                    Android="edit_icon"
                    iOS="edit_icon"    
                    WinPhone="Assets/edit_icon.png"/>
            </control:ConditionalToolbarItem.Icon>
        </control:ConditionalToolbarItem>

    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>            
            <StackLayout                
                Grid.Row="0">
                <StackLayout.HorizontalOptions>
                    <OnPlatform 
                        x:TypeArguments="LayoutOptions"
                        Android="Fill"
                        iOS="Fill"
                        WinPhone="Center"/>    
                </StackLayout.HorizontalOptions>                
                <Label 
                    Text="{Binding Item.Title}"
                    Style="{StaticResource TitleStyle}" />
            </StackLayout>

            <Grid                
                Grid.Row="1"
                BackgroundColor="Transparent">
                <Grid.HorizontalOptions>
                    <OnPlatform 
                        x:TypeArguments="LayoutOptions"
                        Android="Fill"
                        iOS="Fill"
                        WinPhone="Center"/>
                </Grid.HorizontalOptions>
                <Image
                Source="{Binding Item.ImageUrl}"
                Style="{StaticResource ItemImageStyle}"/>
            </Grid>            

            <StackLayout                
                Grid.Row="2">
                <StackLayout.HorizontalOptions>
                    <OnPlatform 
                        x:TypeArguments="LayoutOptions"
                        Android="Fill"
                        iOS="Fill"
                        WinPhone="Center"/>
                </StackLayout.HorizontalOptions>
                <Label
                    Text="{Binding Item.Description}"
                    Style="{StaticResource DescriptionStyle}"/>
            </StackLayout>            

            <StackLayout
                Grid.Row="3">
                <StackLayout.HorizontalOptions>
                    <OnPlatform 
                        x:TypeArguments="LayoutOptions"
                        Android="Fill"
                        iOS="Fill"
                        WinPhone="Center"/>
                </StackLayout.HorizontalOptions>
                <Label
                    Text="{Binding Item.CreatedAt.Date, StringFormat='{0:dd MMMM, yyyy}'}"
                    Style="{StaticResource CreatedStyle}" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>