<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGODirectory.Views.OrganizationEditView"
             xmlns:behaviors="clr-namespace:NGODirectory.Behaviors;assembly=NGODirectory"
             xmlns:control="clr-namespace:NGODirectory.Controls;assembly=NGODirectory"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="ItemImageStyle" TargetType="Image">
                <Setter Property="HeightRequest" Value="200" />
                <Setter Property="Aspect" Value="AspectFill" />
            </Style>

            <Style x:Key="CameraImageStyle" TargetType="Image">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="ItemHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Small" />
                <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
                <Setter Property="Margin" Value="12, 0" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>

        <ToolbarItem
            Text="Guardar organización" 
            Command="{Binding SaveCommand}"
            Icon="{StaticResource SaveIcon}"
            Order="Primary"
            Priority="0"/>

        <control:ConditionalToolbarItem
            Text="Eliminar organización" 
            Command="{Binding DeleteCommand}"
            IsVisible="{Binding IsEditMode}"
            Icon="{StaticResource DeleteIcon}"
            Order="Primary"
            Priority="1"/>

    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackLayout
                Grid.Row="0">
                <Label 
                    Text="Nombre"
                    Style="{StaticResource ItemHeaderStyle}"/>
                <Entry 
                    Placeholder="Introduce el nombre"
                    Text="{Binding Item.Name, Mode=TwoWay}">
                    <Entry.Behaviors>
                        <behaviors:EntryMaxLengthValidatorBehavior MaxLength="50"/>
                    </Entry.Behaviors>
                </Entry>
            </StackLayout>
            <Grid
                Grid.Row="1"
                BackgroundColor="{StaticResource GrayColor}">
                <Image
                    Source="{Binding LogoUrl}"
                    Style="{StaticResource ItemImageStyle}"/>
                <Image
                    Style="{StaticResource CameraImageStyle}">
                    <Image.Source>
                        <OnPlatform                       
                            x:TypeArguments="ImageSource"
                            iOS="image_icon"
                            Android="image_icon"
                            WinPhone="Assets/image_icon.png"/>
                    </Image.Source>
                </Image>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding PickImageCommand}"
                        NumberOfTapsRequired="1" />
                </Grid.GestureRecognizers>
            </Grid>            
            <StackLayout
                Grid.Row="2">
                <Label 
                    Text="Descripción"
                    Style="{StaticResource ItemHeaderStyle}"/>
                <Editor
                    Text="{Binding Item.Description, Mode=TwoWay}">
                    <Editor.Behaviors>
                        <behaviors:EditorMaxLengthValidatorBehavior MaxLength="500"/>
                    </Editor.Behaviors>
                </Editor>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>